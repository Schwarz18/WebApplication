<h1 class="mb-4">Edit Status</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="EditStatus" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label fw-bold"></label>
                        <select asp-for="Status" class="form-select" name="Status" required>
                            <option value="">-- Select Status --</option>
                            <option value="OutforDelivery">Out for Delivery</option>
                            <option value="Delivered">Delivered</option>
                            <option value="Canceled">Canceled</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-action="Orders" class="btn btn-link">Back to List</a>
        </div>
    </div>
</div>
