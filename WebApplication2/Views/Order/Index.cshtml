@model IEnumerable<WebApplication2.Dtos.OrderReadDto>

@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    foreach (var order in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <strong>Order ID:</strong> @order.Id <br />
                <strong>Date:</strong> @order.OrderDate.ToLocalTime().ToString("g") <br />
                <strong>Status:</strong> @order.Status
            </div>
        </div>
    }
}

                        

