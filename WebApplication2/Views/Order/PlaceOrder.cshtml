@using WebApplication2.Dtos
@model List<OrderItemDto>

<form asp-action="PlaceOrder" method="post">
    <div class="form-group">
        <label for="deliveryAddress">Delivery Address</label>
        <input type="text" class="form-control" id="deliveryAddress" name="deliveryAddress" required />
    </div>

    <div class="form-group">
        <label for="paymentMethod">Payment Method</label>
        <select class="form-control" id="paymentMethod" name="paymentMethod" required>
            <option value="">-- Select Payment Method --</option>
            <option value="CreditCard">Credit Card</option>
            <option value="DebitCard">Debit Card</option>
            <option value="UPI">UPI</option>
            <option value="CashOnDelivery">Cash on Delivery</option>
        </select>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        <input type="hidden" name="items[@i].ProductId" value="@Model[i].ProductId" />
        <input type="hidden" name="items[@i].Quantity" value="@Model[i].Quantity" />
    }

    <button type="submit" class="btn btn-primary">Place Order</button>
</form>
