@model WebApplication2.Dtos.UserProfileDto 
@* @model WebApplication2.Dtos.UpdateUserProfileDto *@

@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient bg-primary text-white py-3">
                    <h4 class="mb-0 text-center">👤 My Profile</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">@Html.DisplayNameFor(model => model.Id)</label>
                        <input type="text" class="form-control-plaintext bg-light p-2 rounded" value="@Html.DisplayFor(model => model.Id)" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">@Html.DisplayNameFor(model => model.Name)</label>
                        <input type="text" class="form-control-plaintext bg-light p-2 rounded" value="@Html.DisplayFor(model => model.Name)" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">@Html.DisplayNameFor(model => model.Email)</label>
                        <input type="text" class="form-control-plaintext bg-light p-2 rounded" value="@Html.DisplayFor(model => model.Email)" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">@Html.DisplayNameFor(model => model.Address)</label>
                        <input type="text" class="form-control-plaintext bg-light p-2 rounded" value="@Html.DisplayFor(model => model.Address)" readonly>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between flex-wrap gap-2">
                        <a asp-action="EditProfile" class="btn btn-outline-primary w-100">✏️ Edit Profile</a>
                        <a asp-action="ChangePassword" class="btn btn-outline-warning w-100">🔒 Change Password</a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100">🏠 Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
