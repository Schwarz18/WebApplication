<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">🔐 Change My Password</h4>
                </div>
                <div class="card-body">
                    <form asp-action="ChangePassword">
                        <!-- Old Password -->
                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label fw-semibold"></label>
                            <input type="password" asp-for="OldPassword" class="form-control" placeholder="Enter current password">
                            <span asp-validation-for="OldPassword" class="text-danger small"></span>
                        </div>

                        <!-- New Password -->
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                            <input type="password" asp-for="NewPassword" class="form-control" placeholder="Enter new password">
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <input type="submit" value="✅ Update Password" class="btn btn-success w-50 me-2">
                            <a asp-action="Profile" class="btn btn-secondary w-50 ms-2">🔙 Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



